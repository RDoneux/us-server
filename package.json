{
  "name": "tplt-node-server",
  "version": "0.0.0",
  "description": "node js express server template",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "npx nodemon ./src/index.ts",
    "build": "node ./build.mjs",
    "start": "npm run build && cd dist && node index.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down ",
    "lint": "npx eslint . --fix",
    "lint:ci": "npx eslint .",
    "prettier": "npx prettier . --write",
    "prettier:ci": "npx prettier . --check",
    "test": "jest",
    "test:ci": "jest --ci --coverage --coverageDirectory=dist/coverage",
    "database:migrate": "npx typeorm-ts-node-commonjs migration:run -d ./src/globals/data-source.ts",
    "database:revert": "npx typeorm-ts-node-commonjs migration:revert -d ./src/globals/data-source.ts"
  },
  "author": "Rob Doneux",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.13",
    "@types/supertest": "^6.0.2",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "globals": "^15.11.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.7",
    "prettier": "3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.10.0"
  },
  "dependencies": {
    "debug": "^4.3.7",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "mysql2": "^3.11.3",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.20"
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "outputDirectory": "./dist/junit",
    "outputName": "junit.xml",
    "uniqueOutputName": "false",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  }
}
